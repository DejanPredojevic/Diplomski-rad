package controller;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;

public class ReadFile {
	
	public ReadFile() {
		

		File file = new File("../JavaD64Fix/Test/d220b.d64");
		File file1 = new File("../JavaD64Fix/Test/d196a-(31E).d64");
		File file2 = new File("../JavaD64Fix/Test/d214b-(3E).d64");
		File file3 = new File("../JavaD64Fix/Test/d219b-(1E).d64");
		File file4 = new File("../JavaD64Fix/Test/d220a.d64");
		byte[] fileContent;
		byte[] fileContent1;
		byte[] fileContent2;
		byte[] fileContent3;
		byte[] fileContent4;
		try {
			fileContent = Files.readAllBytes(file.toPath());
			System.out.println(fileContent.length + "-> d220b");
			
			fileContent1 = Files.readAllBytes(file1.toPath());
			System.out.println(fileContent1.length + "-> d196a-(31E)");
			for(int i=fileContent1.length-1 ; i > fileContent1.length-684 ; i--) {
				if(i%20 == 0)
					System.out.println("/n");
		         System.out.print(fileContent1[i] +" ");
		    }
			fileContent2 = Files.readAllBytes(file2.toPath());
			System.out.println(fileContent2.length + "-> d214b-(3E)");
			fileContent3 = Files.readAllBytes(file3.toPath());
			System.out.println(fileContent3.length + "-> d219b-(1E)");
			
			System.out.println("/n");
			fileContent4 = Files.readAllBytes(file4.toPath());
			System.out.println(fileContent4.length + "-> d220a");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
}
