package model;

import java.io.File;
import java.util.ArrayList;
import java.util.List;
import java.util.Observable;

public class Files extends Observable{
	
	File[] files = null;
	File selected = null;
	List<File> compare = new ArrayList<File>();

	public File[] getFiles() {
		return files;
	}

	public void setFiles(File[] files) {
		this.files = files;
		setChanged();
        notifyObservers("FAJLOVI");
	}

	public File getSelected() {
		return selected;
	}

	public void setSelected(File selected) {
		this.selected = selected;
		setChanged();
        notifyObservers("FAJL");
	}
	
	public List<File> getCompare() {
		return compare;
	}

	public void setCompare(File compare) {
		if(!this.compare.contains(compare)) {
			this.compare.add(compare);
		}
	}
	
	public void deleteCompare(File compare) {
		this.compare.remove(compare);
	}
	
}
